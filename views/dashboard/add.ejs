<div class="container-fluid container-fluid-custom pb-2 mb-2">
    <div class="row mb-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard" style="font-size:1rem;">Dashboard</a></li>
                <li style="font-size:1rem;" class="breadcrumb-item active">Add Note </li>
            </ol>
        </nav>

        <div class="col d-flex justify-content-between align-items-center">
            <h1 class="h3" style="font-size:1.3rem;">Add Note</h1>
        </div>
    </div>
</div>

<form action="/dashboard/add" method="POST" class="position-relative" style="max-width: 1000px; margin: 0 auto;">
    <div class="form-group mb-1">
        <input type="text" class="form-control fw-bold border-0 fs-5" style="width: 100%;" id="title" name="title"
            placeholder="Title" required>
    </div>

    <div class="form-group mb-2">
        <textarea required class="form-control pt-3 fs-5" id="body" name="body" placeholder="Take a note..." rows="8"
            style="width: 100%;"></textarea>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-sm">+Add Note</button>
    </div>
</form>


